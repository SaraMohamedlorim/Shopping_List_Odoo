<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_update_prices_form" model="ir.ui.view">
        <field name="name">shopping.update.prices.form</field>
        <field name="model">shopping.update.prices.wizard</field>
        <field name="arch" type="xml">
            <form string="Update prices">
                <group>
                    <group>
                        <field name="percentage" required="1"/>
                        <field name="operation" required="1"/>
                    </group>
                    <group>
                        <field name="category_id"/>
                    </group>
                </group>
                <footer>
                    <button name="action_update_prices" string="Update prices" type="object" class="btn-primary"/>
                    <button string="Cancle" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_update_prices" model="ir.actions.act_window">
        <field name="name">Update prices</field>
        <field name="res_model">shopping.update.prices.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- إضافة الزر إلى قائمة السياق -->
    <record id="view_shopping_item_tree_inherit_button" model="ir.ui.view">
        <field name="name">shopping.item.form.inherit.update.button</field>
        <field name="model">shopping.item</field>
        <field name="inherit_id" ref="Shopping_List.view_shopping_item_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                    <button name="action_update_prices" 
                    string="Update prices"
                     type="action" 
                     class="btn-secondary"/>
            </xpath>
        </field>
    </record>
</odoo>