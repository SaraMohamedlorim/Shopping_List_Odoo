<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_copy_shopping_list_form" model="ir.ui.view">
        <field name="name">shopping.copy.shopping.list.form</field>
        <field name="model">shopping.copy.shopping.list.wizard</field>
        <field name="arch" type="xml">
            <form string="Copy shopping list">
                <group>
                    <group>
                        <field name="original_list_id" readonly="1"/>
                        <field name="new_list_name" required="1"/>
                    </group>
                    <group>
                        <field name="copy_items"/>
                        <field name="reset_bought_status"/>
                    </group>
                </group>
                <footer>
                    <button name="action_copy_list" string="Copy list" type="object" class="btn-primary"/>
                    <button string="Cancle" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_copy_shopping_list" model="ir.actions.act_window">
        <field name="name">Copy shopping list</field>
        <field name="res_model">shopping.copy.shopping.list.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- إضافة الزر إلى قائمة السياق -->
    <record id="view_shopping_list_form_inherit_copy_button" model="ir.ui.view">
        <field name="name">shopping.list.form.with.actions</field>
        <field name="model">shopping.list</field>
        <field name="inherit_id" ref="Shopping_List.view_shopping_list_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_copy_list"
                 string="Copy list" 
                 type="action"
                  class="btn-info"/>
            </xpath>
        </field>
    </record>
</odoo>