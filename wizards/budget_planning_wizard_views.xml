<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_budget_planning_wizard_form" model="ir.ui.view">
        <field name="name">shopping.budget.planning.wizard.form</field>
        <field name="model">shopping.budget.planning.wizard</field>
        <field name="arch" type="xml">
            <form string="Budget planning">
                <group>
                    <field name="planning_type" required="1"/>
                    <field name="budget_amount" required="1"/>
                    <field name="start_date"/>
                    <field name="period"/>
                </group>

                <group string="Automatic planning" attrs="{'invisible': [('planning_type', '!=', 'automatic')]}">
                    <field name="auto_based_on"/>
                    <field name="reference_months"/>
                </group>

                <group string="Category budgets" attrs="{'invisible': [('planning_type', '!=', 'category')]}">
                    <field name="category_budgets">
                        <tree editable="bottom">
                            <field name="category_id"/>
                            <field name="historical_spending" readonly="1"/>
                            <field name="allocated_amount"/>
                        </tree>
                    </field>
                </group>

                <footer>
                    <button name="action_generate_budget" string="Create a budget" type="object" class="btn-primary"/>
                    <button string="Cancle" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_budget_planning_wizard" model="ir.actions.act_window">
        <field name="name">Budget planning</field>
        <field name="res_model">shopping.budget.planning.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>