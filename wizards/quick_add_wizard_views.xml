<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_quick_add_wizard_form" model="ir.ui.view">
        <field name="name">shopping.quick.add.wizard.form</field>
        <field name="model">shopping.quick.add.wizard</field>
        <field name="arch" type="xml">
            <form string="Quick addition of elements">
                <group>
                    <group>
                        <field name="list_id" required="1"/>
                    </group>
                    <group>
                        <field name="default_category_id"/>
                        <field name="default_priority"/>
                        <field name="default_uom"/>
                    </group>
                </group>

                <field name="item_lines">
                    <tree editable="bottom" string="Items">
                        <field name="name" required="1"/>
                        <field name="quantity"/>
                        <field name="uom"/>
                        <field name="category_id"/>
                        <field name="priority"/>
                        <field name="estimated_price"/>
                        <field name="notes"/>
                    </tree>
                </field>

                <footer>
                    <button name="action_add_items" string="Add items" type="object" class="btn-primary"/>
                    <button name="action_add_another" string="Add other elements" type="object" class="btn-secondary"/>
                    <button string="Cancle" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_quick_add_wizard" model="ir.actions.act_window">
        <field name="name">Add items quickly</field>
        <field name="res_model">shopping.quick.add.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_shopping_list"/>
        <field name="binding_view_types">form</field>
    </record>
</odoo> 