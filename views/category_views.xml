<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View for Shopping Categories -->
    <record id="view_shopping_category_tree" model="ir.ui.view">
        <field name="name">shopping.category.tree</field>
        <field name="model">shopping.category</field>
        <field name="arch" type="xml">
            <tree decoration-muted="parent_id != False">
                <field name="name"/>
                <field name="parent_id"/>
                <field name="item_count" widget="progressbar" options="{'editable': false}"/>
                <field name="color" widget="color"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Shopping Categories -->
    <record id="view_shopping_category_form" model="ir.ui.view">
        <field name="name">shopping.category.form</field>
        <field name="model">shopping.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="parent_id"/>
                            <field name="color" widget="color"/>
                        </group>
                        <group>
                            <field name="item_count" widget="progressbar" options="{'editable': false}"/>
                            <button name="action_view_items" string="View items" type="object" class="btn-primary"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" nolabel="1"/>
                    </group>
                    <field name="child_ids">
                        <tree>
                            <field name="name"/>
                            <field name="item_count"/>
                            <field name="color" widget="color"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>
</odoo>